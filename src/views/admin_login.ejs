		<form method="post" class="needs-validation" action="/adlogin" novalidate>
			<%- include('../../partials/flash')%>
				<div class="mb-3">
					<label for="exampleInputEmail1" class="form-label">Email Address</label> <i data-feather="mail"></i>
					<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
						placeholder="johndoe@abc.com" name="email_address" required>
					<div class="valid-feedback">
						Looks good!
					</div>
				</div>
				<div class="mb-3">
					<label for="pswrd" class="form-label">Password</label> <i data-feather="lock"></i>
					<input type="password" class="form-control" placeholder="******" name="password" id="pswrd"
						required>
					<div class="valid-feedback">
						Looks good!
					</div>
				</div>
				<button type="submit" class="btn btn-warning btn-lg" id="btSub" value="Login">Login</button>

		</form>
	</div>
