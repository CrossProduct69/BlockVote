        <div class="mb-3">
          <label for="exampleInputText" class="form-label">First Name</label> <i data-feather="user-plus"></i>
          <input type="text" class="form-control" id="exampleInputText" aria-describedby="textHelp"
            placeholder="John Doe" name="first_name" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email Address</label> <i data-feather="mail"></i>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="johndoe@abc.com" name="email_address" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label> <i data-feather="lock"></i>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="******" name="password"
            required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword2" class="form-label">Confirm Password</label> <i data-feather="key"></i>
          <input type="password" class="form-control" id="exampleInputPassword2" placeholder="******"
            name="confirm_password" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button type="submit" class="btn btn-warning btn-lg" id="btSub" value="Sign up">Sign Up</button>

    </form>




